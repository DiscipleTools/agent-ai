# Production Environment Configuration
# Copy this file to .env before deploying

# Database Configuration
MONGODB_URI=mongodb://mongodb:27017/agent-ai-server
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=change-this-secure-password

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-minimum-32-chars
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Prediction Guard AI Configuration
PREDICTION_GUARD_API_KEY=your-prediction-guard-api-key
PREDICTION_GUARD_ENDPOINT=https://api.predictionguard.com
PREDICTION_GUARD_DEFAULT_MODEL=Hermes-3-Llama-3.1-8B

# Qdrant Vector Database Configuration
QDRANT_URL=http://qdrant:6333

# Application Configuration
APP_NAME=Agent AI Server
NODE_ENV=production
LOG_LEVEL=info

# Optional: Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Optional: SSL Configuration
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem 