# Database
MONGODB_URI=mongodb://localhost:27017/agent-ai-server

# JWT Configuration (GENERATE SECURE SECRETS FOR PRODUCTION)
# For development, you can use these or generate your own with: openssl rand -base64 32
JWT_SECRET=dev-jwt-secret-change-for-production-use
JWT_REFRESH_SECRET=dev-jwt-refresh-secret-change-for-production-use
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Qdrant Vector Database Configuration
QDRANT_URL=http://localhost:6333

# Application
APP_NAME=Agent AI Server
NODE_ENV=development

# Optional: Chatwoot Integration (leave blank if not using)
# CHATWOOT_URL=https://your-chatwoot-instance.com
# CHATWOOT_API_TOKEN=your-global-chatwoot-api-token 