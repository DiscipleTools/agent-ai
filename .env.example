# Application
APP_NAME=Agent AI Server
NODE_ENV=development

# Logging
LOG_LEVEL=info


FRONTEND_URL=http://localhost:3000 

CHATWOOT_URL=https://your-chatwoot-instance.com
CHATWOOT_API_TOKEN=your-chatwoot-api-token