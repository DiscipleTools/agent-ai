# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/agent-ai-server
MONGODB_TEST_URI=mongodb://localhost:27017/agent-ai-server-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Logging
LOG_LEVEL=info

# CORS Configuration
FRONTEND_URL=http://localhost:3001 


# Chatwoot Integration (Optional - for sending responses back)
CHATWOOT_URL=https://your-chatwoot-instance.com
CHATWOOT_API_TOKEN=your-chatwoot-api-token

# Prediction Guard (For future AI implementation)
PREDICTION_GUARD_API_KEY=your-api-key
PREDICTION_GUARD_ENDPOINT=https://api.predictionguard.com/v1